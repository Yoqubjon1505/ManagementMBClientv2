@page "/financialIndicators"
@using ManagementMBClient.DTOs
@inject FinancialIndicatorsService FinancialIndicatorsService

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-center">Financial Indicators</h3>
            <div class="row mb-3">
                <div class="col">
                    <label for="fromDate" class="form-label">From Date</label>
                    <InputDate id="fromDate" class="form-control" @bind-Value="fromDate" />
                </div>
                <div class="col">
                    <label for="toDate" class="form-label">To Date</label>
                    <InputDate id="toDate" class="form-control" @bind-Value="toDate" />
                </div>
                <div class="col">
                    <button class="btn btn-secondary mt-4" @onclick="GetFinancialIndicators">Search</button>
                </div>
            </div>
            
        </div>
    </div>

    @if (financialIndicators == null)
    {
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <p><em>Loading...</em></p>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-3">
            <div class="col-md-12">
                <table class="table table-striped table-bordered mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                <input type="checkbox" @onclick="ToggleSelectAll" />
                            </th>
                            <th>Leverage</th>
                            <th>Rotation</th>
                            <th>Inventory Turnover</th>
                            <th>Liquidity</th>
                            <th>Profitability</th>
                            <th>GrossProfit</th>
                            <th>TotalExpenses</th>
                            <th>NetProfit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var indicator in financialIndicators)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" @checked="selectedIndicators.Contains(indicator.Id)" @onclick="() => ToggleSelection(indicator.Id)" />
                                </td>
                                <td>@indicator.Leverage</td>
                                <td>@indicator.Rotation</td>
                                <td>@indicator.InventoryTurnover</td>
                                <td>@indicator.Liquidity</td>
                                <td>@indicator.Profitability</td>
                                <td>@indicator.GrossProfit</td>
                                <td>@indicator.TotalExpenses</td>
                                <td>@indicator.NetProfit</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" @onclick="() => DeleteFinancialIndicator(indicator.Id)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<FinancialIndicatorDTO> financialIndicators;
    private HashSet<Guid> selectedIndicators = new HashSet<Guid>();
    private DateTime fromDate;
    private DateTime toDate;

    protected override async Task OnInitializedAsync()
    {
        financialIndicators = new List<FinancialIndicatorDTO>();
    }

    private async Task GetFinancialIndicators()
    {
        financialIndicators = await FinancialIndicatorsService.GetByDateAsync(fromDate, toDate);
    }

    private async Task DeleteFinancialIndicator(Guid id)
    {
        await FinancialIndicatorsService.DeleteFinancialIndicatorAsync(id);
        financialIndicators = await FinancialIndicatorsService.GetByDateAsync(fromDate, toDate);
    }

    

    private void ToggleSelection(Guid id)
    {
        if (selectedIndicators.Contains(id))
        {
            selectedIndicators.Remove(id);
        }
        else
        {
            selectedIndicators.Add(id);
        }
    }

    private void ToggleSelectAll()
    {
        if (selectedIndicators.Count == financialIndicators.Count)
        {
            selectedIndicators.Clear();
        }
        else
        {
            selectedIndicators = new HashSet<Guid>(financialIndicators.Select(i => i.Id));
        }
    }
}
